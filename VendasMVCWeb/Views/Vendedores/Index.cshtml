@model IEnumerable<VendasMVCWeb.Models.Vendedor>




@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class=" btn btn-success ">Cadastrar Novo</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>

            </th>
        </tr>

        
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioBase)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Nome)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-primary btn-xs">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-default btn-xs">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger btn-xs">Excluir</a>
            </td>
        </tr>
        }

    </tbody>
</table>




